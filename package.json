{
  "name": "simplify-tabs",
  "displayName": "simplify-tabs",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Simplify Tabs",
        "properties": {
          "simplifyTabs.closeTabs.enableAuto": {
            "type": "boolean",
            "default": true,
            "description": "Automatically close tabs when they are not in use."
          },
          "simplifyTabs.closeTabs.retainingTabCount": {
            "type": "number",
            "default": 10,
            "description": "Number of tabs to retain when closing tabs. If set to less than 0, all tabs will be retained."
          },
          "simplifyTabs.closeTabs.waitingTime": {
            "type": "number",
            "default": 3600,
            "description": "Delay closing tabs when they are not in use."
          },
          "simplifyTabs.closeTabs.isDirtyTabRemovalAllowed": {
            "type": "boolean",
            "default": false,
            "description": "Allow closing dirty tabs."
          },
          "simplifyTabs.closeTabs.isActiveTabRemovalAllowed": {
            "type": "boolean",
            "default": false,
            "description": "Allow closing active tabs."
          },
          "simplifyTabs.closeTabs.shiftByPinnedTab": {
            "type": "boolean",
            "default": true,
            "description": "Shift the number of tabs to retain to the right by the number of pinned tabs."
          },
          "simplifyTabs.closeTabsHistory.maximumDisplayCountInHistory": {
            "type": "number",
            "default": 20,
            "description": "Maximum display count in history."
          },
          "simplifyTabs.alignTabs.enableAuto": {
            "type": "boolean",
            "default": true,
            "description": "Automatically close tabs when they are active."
          },
          "simplifyTabs.alignTabs.delayTime": {
            "type": "number",
            "default": 5,
            "description": "Delay time for moving tabs."
          },
          "simplifyTabs.alignTabs.canMovePinnedTab": {
            "type": "boolean",
            "default": true,
            "description": "Allow moving pinned tabs."
          }
        }
      }
    ],
    "commands": [
      {
        "command": "simplifyTabs.refreshClosingTabsView",
        "title": "Refresh ClosingTabsView"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "simplifyTabs.closingTabsView",
          "name": "Simplify Tabs"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "ts-loader": "^9.5.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}
